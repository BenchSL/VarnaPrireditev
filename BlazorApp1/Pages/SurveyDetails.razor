@page "/SurveyDetails/{Id}"

@using BlazorApp1.Services
@using BlazorApp1.Models

@inject SurveyService surServic

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Anketa.NameSurvey</h1>
            </div>
            <div class="card-body text-center">
                <h4>Id ankete: @Anketa.Id</h4>
                <h4>Uporabniška izkušnja @Anketa.Preview</h4>
                <h4>Ocena: @Anketa.Rating</h4>
                <h4>Datum submicije: @Anketa.DateSub</h4>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Id { get; set; }

    public Survey Anketa { get; set; } = new Survey();

    protected async override Task OnInitializedAsync()
    {
        Anketa = await surServic.GetSurvey(Convert.ToString(Id));
    }

}
